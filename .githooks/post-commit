#!/bin/sh
#
# Post-commit hook to provide feedback after a successful commit
# Installed by 'make install-hooks'

# Colors for better output
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "${GREEN}Commit successful! All checks passed.${NC}"
echo "${GREEN}Remember to push your changes.${NC}"

# Cleanup consent file so next sensitive action re-prompts if needed (one-liner)
cd "$(git rev-parse --show-toplevel 2>/dev/null || pwd)"; [ -f AGENT_CONSENT.md ] && [ -e .AGENT_CONSENT ] && rm -f .AGENT_CONSENT || true
