{
  "name": "@buger/probe-mcp-agent",
  "version": "1.0.0",
  "description": "MCP server for Probe with agentic capabilities",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "probe-mcp-agent": "build/index.js"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "mkdir -p build && cp -r src/* build/ && chmod +x build/index.js",
    "prepare": "npm run build",
    "start": "node build/index.js",
    "dev": "node src/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buger/probe.git"
  },
  "keywords": [
    "mcp",
    "probe",
    "code-search",
    "ai"
  ],
  "author": "buger",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.15",
    "@ai-sdk/google": "^1.1.15",
    "@ai-sdk/openai": "^1.1.15",
    "@buger/probe": "*",
    "@modelcontextprotocol/sdk": "^1.6.0",
    "ai": "^4.1.54",
    "axios": "^1.6.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.1.1",
    "tar": "^6.2.0",
    "tiktoken": "^1.0.20",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}